<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".screenLoading.screen_LoadingBreeders"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        tools:ignore="ScrollViewSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessLeaf,UselessParent">

            <pl.droidsonroids.gif.GifImageView

                android:id="@+id/giftextWalking"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/dog"
                tools:ignore="MissingConstraints" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/giftextID"
                android:layout_width="match_parent"
                android:layout_height="246dp"
                android:layout_marginTop="-100dp"
                android:layout_marginBottom="100dp"
                android:src="@drawable/loadingtext"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:layout_marginTop="-100dp"
                android:src="@drawable/shiva"
                tools:ignore="ContentDescription,MissingConstraints" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-25dp"
                android:fontFamily="@font/autour_one"
                android:text="@string/friendlyTip1"
                android:textAlignment="center"
                android:textColor="#675B5B"
                android:textSize="10sp"
                android:textStyle="bold"
                android:translationZ="90dp"
                tools:ignore="HardcodedText,SmallSp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/autour_one"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/companyNameDescription"
                android:textAlignment="center"
                android:textSize="10sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SmallSp" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>