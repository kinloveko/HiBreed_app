<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/stlye_border_textview_edit"
    android:backgroundTint="@color/brownish"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_dialog"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="invisible"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/image_view_dialog"
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:layout_below="@id/text_dialog"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/noimage" />

    <Button
        android:id="@+id/button_close_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view_dialog"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape"
        android:backgroundTint="@color/brown"
        android:fontFamily="@font/poppinsemibold"
        android:text="CLOSE"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/button_close_dialog"
        android:text="None"
        android:visibility="invisible" />
</RelativeLayout>