<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#DEE8BE"
    android:id="@+id/scrollID"
    android:layout_height="match_parent"
    tools:context=".loginAndRegistration.RegistrationForBreeder">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        tools:context=".loginAndRegistration.RegistrationForOwner"
        android:gravity="center"
        tools:ignore="ExtraText,ScrollViewSize,UselessLeaf">

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessParent">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"

                android:background="@color/white"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-70dp"
                    android:src="@drawable/breeders"
                    tools:ignore="ContentDescription,MissingConstraints,ObsoleteLayoutParam" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="370dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="-95dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Registration for Breeders"
                android:textAlignment="center"
                android:textColor="@color/breederTheme"
                android:textSize="25dp"
                android:translationZ="3dp"
                tools:ignore="HardcodedText,MissingConstraints,SpUsage" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-26dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="120dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Fill in all the blank with the correct data being asked."
                android:textAlignment="center"
                android:textColor="@color/material_blue_grey_95"
                android:textSize="15sp"
                android:translationZ="3dp"
                app:layout_constraintBottom_toTopOf="@+id/firstName_Layout"
                tools:ignore="HardcodedText,SpUsage" />

            //Email

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reg_email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-60dp"
                android:visibility="gone"
                app:endIconMode="clear_text"
                app:helperText="*Required"
                app:helperTextTextColor="#0967F4"
                app:hintEnabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="@color/breederTheme"
                tools:ignore="ExtraText,HardcodedText,RtlHardcoded">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_emailEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/style_border_all"
                    android:hint="First name"
                    android:visibility="gone"
                    app:hintEnabled="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_logoNameID"
                    app:layout_constraintVertical_bias="0.165"
                    tools:ignore="MissingConstraints,RtlHardcoded"
                    tools:layout_editor_absoluteX="0dp" />
            </com.google.android.material.textfield.TextInputLayout>

            //Password

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reg_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="40dp"
                android:visibility="invisible"
                app:endIconMode="clear_text"
                app:helperText="*Required"
                app:helperTextTextColor="#0967F4"
                app:hintEnabled="false"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="@color/breederTheme"
                tools:ignore="ExtraText,HardcodedText,RtlHardcoded,RtlSymmetry">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_passwordEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/style_border_all"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:visibility="invisible" />
            </com.google.android.material.textfield.TextInputLayout>

            // FIRST NAME

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/firstName_Input"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-200dp"
                app:endIconMode="clear_text"
                app:helperText="*Required"
                app:helperTextTextColor="#0967F4"
                app:hintEnabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="@color/breederTheme"
                tools:ignore="ExtraText,HardcodedText,RtlHardcoded">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/firstName_Edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/style_border_all"
                    android:hint="First name"
                    app:hintEnabled="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_logoNameID"
                    app:layout_constraintVertical_bias="0.165"
                    tools:ignore="MissingConstraints,RtlHardcoded"
                    tools:layout_editor_absoluteX="0dp" />
            </com.google.android.material.textfield.TextInputLayout>
            //MIDDLE NAME

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reg_middleName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginTop="15dp"
                app:endIconMode="clear_text"
                app:helperText="*Leave it blank if none"
                app:helperTextTextColor="#0967F4"
                app:hintEnabled="false"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="@color/breederTheme"
                tools:ignore="ExtraText,HardcodedText,RtlHardcoded,RtlSymmetry">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_middleNameEdit"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/style_border_all"
                    android:hint="Middle name" />
            </com.google.android.material.textfield.TextInputLayout>
            //LAST NAME

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reg_lastName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                app:endIconMode="clear_text"
                app:helperText="*Required"
                app:helperTextTextColor="#0967F4"
                app:hintEnabled="false"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="@color/breederTheme"
                tools:ignore="ExtraText,HardcodedText,RtlHardcoded,RtlSymmetry">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_lastNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/style_border_all"
                    android:hint="Last name" />
            </com.google.android.material.textfield.TextInputLayout>

            //Contact Number

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reg_contact"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                app:counterEnabled="true"
                app:counterMaxLength="11"
                app:endIconMode="clear_text"
                app:helperText="*Required"
                app:helperTextTextColor="#0967F4"
                app:hintEnabled="false"
                app:startIconDrawable="@drawable/ic_phone"
                app:startIconTint="@color/breederTheme"
                tools:ignore="ExtraText,HardcodedText,RtlHardcoded,RtlSymmetry">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_contactEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/style_border_all"
                    android:hint="Contact Number"
                    android:inputType="number"
                    android:maxLength="11" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reg_address"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginTop="15dp"
                app:endIconMode="clear_text"
                app:helperText="*Required"
                app:helperTextTextColor="#0967F4"
                app:hintEnabled="false"
                app:startIconDrawable="@drawable/ic_location"
                app:startIconTint="@color/breederTheme"
                tools:ignore="ExtraText,HardcodedText,RtlHardcoded,RtlSymmetry">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_addressEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/style_border_all"
                    android:hint="Address" />
            </com.google.android.material.textfield.TextInputLayout>

            //Zip Code

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reg_zip"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                app:counterEnabled="true"
                app:counterMaxLength="4"
                app:endIconMode="clear_text"
                app:helperText="*Required"
                app:helperTextTextColor="#0967F4"
                app:hintEnabled="false"
                app:startIconDrawable="@drawable/ic_location"
                app:startIconTint="@color/breederTheme"
                tools:ignore="ExtraText,HardcodedText,RtlHardcoded,RtlSymmetry">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_zipEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/style_border_all"
                    android:hint="Zip Code"
                    android:inputType="number"
                    android:maxLength="4" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/dropImageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:text="*Certificate of Legitimacy (PCCI)"
                android:textColor="#0967F4"
                tools:ignore="HardcodedText" />

            <androidx.cardview.widget.CardView
                android:id="@+id/dropImageCardView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="5dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/dropImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="certificate"
                    android:src="@drawable/image_drophereimage"
                    android:translationZ="3dp"
                    app:civ_border_width="2dp"
                    app:civ_circle_background_color="@color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Click here"
                    android:textAlignment="center"
                    android:translationZ="3dp"
                    tools:ignore="HardcodedText" />
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_gallery_images"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="vertical" />

            //Submit

            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/style_border_all"
                android:backgroundTint="@color/breederTheme"
                android:onClick="SignInBreeder_Onclick"
                android:text="Proceed"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:ignore="HardcodedText,UsingOnClickInXml" />


            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppinsbold"
                android:text="Already have account?"
                android:textAlignment="center"
                android:textColor="#202125"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/firstName_Layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.891"
                tools:ignore="HardcodedText,SpUsage" />

            //Sign in Redirecting

            <Button
                android:id="@+id/LoginActivity"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="50dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppinsbold"
                android:text="Sign up"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#2DC4FF"
                tools:ignore="HardcodedText,UsingOnClickInXml" />

        </LinearLayout>
    </RelativeLayout>

</ScrollView>