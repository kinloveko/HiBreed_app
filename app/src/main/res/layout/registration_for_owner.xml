<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/semiWhite"
     android:id="@+id/scrl"
    android:layout_height="match_parent">

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10sp"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"
    tools:context=".loginAndRegistration.RegistrationForOwner"
    android:gravity="center"
    tools:ignore="ExtraText,ScrollViewSize,UselessLeaf">

    <LinearLayout
        android:gravity="center"
        android:layout_width="370dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">


        <androidx.cardview.widget.CardView
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_width="match_parent"

            android:layout_height="400dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_marginTop="-70dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/registrationforowner"
                tools:ignore="ContentDescription,MissingConstraints,ObsoleteLayoutParam" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="370dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_marginTop="-95dp"
            android:translationZ="3dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Registration for Owners"
            android:textAlignment="center"
            android:textColor="@color/darkblue_platte"
            android:textSize="25dp"
            tools:ignore="HardcodedText,MissingConstraints,SpUsage" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="300dp"
            android:layout_marginTop="-26dp"
            android:translationZ="3dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppinsregular"
            android:text="Fill in all the blank with the correct data being asked."
            android:textAlignment="center"
            android:textColor="@color/material_blue_grey_95"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/firstName_Layout"
            tools:ignore="HardcodedText,SpUsage" />

//Email

        <com.google.android.material.textfield.TextInputLayout
            app:endIconMode="clear_text"
            android:id="@+id/reg_email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Email Address"
            android:visibility="invisible"
            app:startIconTint="#673AB7"
            app:startIconDrawable="@drawable/ic_email"
            app:helperText="*Required"
            app:helperTextTextColor="#0967F4"
            tools:ignore="ExtraText,HardcodedText,RtlHardcoded,RtlSymmetry">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_emailEdit"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:background="@drawable/style_border_all"
                />
        </com.google.android.material.textfield.TextInputLayout>

//Password

        <com.google.android.material.textfield.TextInputLayout
            app:endIconMode="clear_text"
            android:id="@+id/reg_password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            app:startIconTint="#673AB7"
            app:startIconDrawable="@drawable/ic_person"
            android:hint="Password"
            app:helperText="*Required"
            android:visibility="invisible"
            app:helperTextTextColor="#0967F4"
            tools:ignore="ExtraText,HardcodedText,RtlHardcoded,RtlSymmetry">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_passwordEdit"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@drawable/style_border_all"
                android:visibility="invisible"
                />
        </com.google.android.material.textfield.TextInputLayout>

// FIRST NAME
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/firstName_Input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:startIconDrawable="@drawable/ic_person"
            app:startIconTint="#673AB7"
            app:hintEnabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:endIconMode="clear_text"
            app:helperText="*Required"
            app:helperTextTextColor="#0967F4"
            android:layout_marginTop="-200dp"
            tools:ignore="ExtraText,HardcodedText,RtlHardcoded">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/firstName_Edit"
                android:layout_width="match_parent"
                android:hint="First name"
                android:layout_height="match_parent"
                app:hintEnabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_logoNameID"
                android:background="@drawable/style_border_all"
                app:layout_constraintVertical_bias="0.165"
                tools:ignore="MissingConstraints,RtlHardcoded"
                tools:layout_editor_absoluteX="0dp" />
        </com.google.android.material.textfield.TextInputLayout>
//MIDDLE NAME

        <com.google.android.material.textfield.TextInputLayout
            app:endIconMode="clear_text"
            android:id="@+id/reg_middleName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            app:hintEnabled="false"
            app:startIconTint="#673AB7"
            app:startIconDrawable="@drawable/ic_person"
            app:helperText="*Leave it blank if none"
            app:helperTextTextColor="#0967F4"
            tools:ignore="ExtraText,HardcodedText,RtlHardcoded,RtlSymmetry">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_middleNameEdit"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/style_border_all"
                android:hint="Middle name"
                 />
        </com.google.android.material.textfield.TextInputLayout>
//LAST NAME

        <com.google.android.material.textfield.TextInputLayout
            app:endIconMode="clear_text"
            android:id="@+id/reg_lastName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            app:hintEnabled="false"
            app:helperText="*Required"
            app:startIconTint="#673AB7"
            app:startIconDrawable="@drawable/ic_person"
            app:helperTextTextColor="#0967F4"
            tools:ignore="ExtraText,HardcodedText,RtlHardcoded,RtlSymmetry">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_lastNameEdit"
                android:layout_width="370dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/style_border_all"
                android:hint="Last name" />
        </com.google.android.material.textfield.TextInputLayout>

//Contact Number

        <com.google.android.material.textfield.TextInputLayout
            app:endIconMode="clear_text"
            android:id="@+id/reg_contact"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            app:hintEnabled="false"
            app:counterEnabled="true"
            app:counterMaxLength="11"
            app:helperText="*Required"
            app:startIconTint="#673AB7"
            app:startIconDrawable="@drawable/ic_phone"
            app:helperTextTextColor="#0967F4"
            tools:ignore="ExtraText,HardcodedText,RtlHardcoded,RtlSymmetry">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_contactEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/style_border_all"
                android:hint="Contact Number"
                android:inputType="number"
                android:maxLength="11" />
        </com.google.android.material.textfield.TextInputLayout>


//Address

        <com.google.android.material.textfield.TextInputLayout
            app:endIconMode="clear_text"
            android:id="@+id/reg_address"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            app:hintEnabled="false"
            app:startIconTint="#673AB7"
            app:startIconDrawable="@drawable/ic_location"
            app:helperText="*Required"
            app:helperTextTextColor="#0967F4"
            tools:ignore="ExtraText,HardcodedText,RtlHardcoded,RtlSymmetry">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_addressEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:hint="Address"
                android:background="@drawable/style_border_all" />
        </com.google.android.material.textfield.TextInputLayout>

//Zip Code

        <com.google.android.material.textfield.TextInputLayout
            app:endIconMode="clear_text"
            android:id="@+id/reg_zip"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            app:hintEnabled="false"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            app:startIconTint="#673AB7"
            app:startIconDrawable="@drawable/ic_location"
            app:counterEnabled="true"
            app:counterMaxLength="4"
            app:helperText="*Required"
            app:helperTextTextColor="#0967F4"
            tools:ignore="ExtraText,HardcodedText,RtlHardcoded,RtlSymmetry">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_zipEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:hint="Zip Code"
                android:inputType="number"
                android:maxLength="4"
                android:background="@drawable/style_border_all"
    />
        </com.google.android.material.textfield.TextInputLayout>

//Submit

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/style_border_all"
            android:backgroundTint="@color/primaryButton"
            android:onClick="SubmitButton"
            android:text="Proceed"
            android:textAlignment="center"
            android:textColor="@color/white"
            tools:ignore="HardcodedText,UsingOnClickInXml" />


        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppinsbold"
            android:text="Already have account?"
            android:textAlignment="center"
            android:textColor="#202125"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/firstName_Layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.891"
            tools:ignore="HardcodedText,SpUsage" />

//Sign in Redirecting

        <Button
            android:id="@+id/LoginActivity"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="50dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppinsbold"
            android:text="Sign up"
            android:onClick="gotoLogin"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#2DC4FF"
            tools:ignore="HardcodedText,UsingOnClickInXml" />

    </LinearLayout>
    </RelativeLayout>
</ScrollView>